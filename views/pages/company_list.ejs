<div class="jumbotron text-center">
    <h1>All Compnies</h1>
</div>
<% if (compnay.length > 0) { %>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Company Name</th>
            <th>License Start Date</th>
            <th>License End Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for (var comp of compnay) { %>
        <tr>
            <td>
                <%= comp.first_name %>
            </td>
            <td>
                <%= comp.last_name %>
            </td>
            <td>
                <%= comp.email %>
            </td>
            <td>
                <%= comp.company_name %>
            </td>
            <td>
                <%= comp.license_start_date %>
            </td>
            <td>
                <%= comp.license_end_date %>
            </td>
            <td>
                <% if (comp.license_status == true) { %>
                <span class="btn btn-sm btn-success status" data-id="<%= comp.id %>" data-status="active">Active</span>
                <% } else if (comp.license_status == false) { %>
                <span class="btn btn-sm btn-danger status" data-id="<%= comp.id %>" data-status="inactive">Inactive</span>
                <% } %>
            </td>
            <td>
                <a href="/company/edit/<%= comp.id %>" class="btn btn-sm btn-primary">Edit</a>
            </td>
        </tr>
        <% } %>
    </tbody>
    <% } else { %>
    <div class="alert alert-danger">
        No data found.
    </div>
    <% } %>
</table>